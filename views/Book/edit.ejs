<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
        <!-- to add the name in the database -->
            <div class="form-group">
                <label for="nameTextField">product</label>
                <input type="text" class="form-control" id="productTextField" placeholder="Enter the product" name="product" value="<%=Jewellery.product%>" required>
            </div>
            <div class="form-group">
                <label for="authorTextField">category</label>
                <input type="text" class="form-control" id="categoryTextField" placeholder="Enter the category" name="category" value="<%=Jewellery.category%>" required>
            </div>
            <div class="form-group">
                <label for="publishedTextField">price</label>
                <input type="text" class="form-control" id="priceTextField" placeholder="Enter the price" name="price" value="<%=Jewellery.price%>" required>
            </div>
            <div class="form-group">
            <!-- it's text area because it takes more space -->
                <label for="descriptionTextArea">color</label>
                <input type="text" class="form-control" id="colorTextField" placeholder="Enter the color" name="color" value="<%=Jewellery.color%>" required>
            </div>
            <div class="form-group">
                <label for="priceTextField">metal</label>
                <input type="text" class="form-control" id="metalTextField" placeholder="Enter the metal" name="metal" value="<%=Jewellery.metal%>" required>
            </div>

            <div class="form-group">
                <label for="priceTextField">size</label>
                <input type="text" class="form-control" id="sizeTextField" placeholder="Enter the size" name="size" value="<%=Jewellery.size%>" required>
            </div>

            <button class="btn btn-primary" type="submit">Submit
            <i class="fas fa-edit"></i></button>

            <button class="btn btn-warning" type="submit">Cancel
            <i class="fas fa-undo"></i></button>

        </form> 
    </div>

</div>
<%- include ../Partials/footer.ejs %>